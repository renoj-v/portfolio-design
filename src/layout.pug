- const nav = self.htmlWebpackPlugin.options.nav
- const footer = self.htmlWebpackPlugin.options.footer
- const topDir = self.htmlWebpackPlugin.options.topDir
- const images = topDir + self.htmlWebpackPlugin.options.imgDir
include partials/nav
include partials/footer
include partials/mixins
doctype html
html(lang="en")
    head
        title= self.htmlWebpackPlugin.options.title
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content="Renoj's portfolio")
        meta(name="author" content="Renoj Varghese")
        block css-before
        each css in self.htmlWebpackPlugin.files.css
            link(href=css, rel='stylesheet')
        block css
    body
        +nav(nav, topDir)
        +break
        .content
            block content
        +break
        +footer(footer)
        each js in self.htmlWebpackPlugin.files.js
            script(type='text/javascript', src=js)
        block js
