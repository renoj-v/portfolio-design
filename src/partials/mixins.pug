mixin img(source, alt_text, exclude_container)
    - if (exclude_container)
        img(src=images+source, alt=alt_text)

    - else
        .img-container
            img(src=images+source, alt=alt_text)
            block
mixin img_absolute(source, alt_text, exclude_container)
    - if (exclude_container)
        img(src=source, alt=alt_text)

    - else
        .img-container
            img(src=source, alt=alt_text)
            block
mixin youtube(source) 
    .video-container
        iframe( width="420" height="315" src=source frameborder="0" allowfullscreen)


