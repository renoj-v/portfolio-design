mixin img(src, alt)
    .img-container
        img(src=src alt=alt)

mixin youtube(key, alt)
    .img-container
        .video-wrapper
            iframe(src="https://www.youtube.com/embed/"+key alt=alt allowfullscreen  frameborder="0")

mixin section(title) 
    h2.project-header=title
    p.project-p
        block

mixin link(href)
    a.btn(href=href)
        .label
            block
