mixin img(source, alt_text, exclude_container)
    - if (exclude_container)
        img(src=images+source, alt=alt_text ? alt_text : source)

    - else
        .img-container
            img(src=images+source, alt=alt_text ? alt_text : source)
            block
mixin lazy_img(source, alt_text, exclude_container)
    - if (exclude_container)
        img(src=images+source, alt=alt_text ? alt_text : source class="lozad")

    - else
        .img-container
            img(src=images+source, alt=alt_text ? alt_text : source  class="lozad")
            block
mixin img_absolute(source, alt_text, exclude_container)
    - if (exclude_container)
        img(src=source, alt=alt_text ? alt_text : source)

    - else
        .img-container
            img(src=source, alt=alt_text ? alt_text : source)
            block
mixin youtube(source) 
    .youtube-container
        iframe( width="420" height="315" src=source frameborder="0" allowfullscreen)

mixin invision(source) 
    .invision-container
        iframe(width="442" height="935" data-src=source frameborder="0" allowfullscreen class="lozad")
mixin video(source,token)
    .video-container
        .video-inner-container
            video(width="100%" autoplay loop id=token)
                source(src=images + source)
                | Your browser does not support the video tag.
        .controls
            h6(id=`${token}_ctrl` class="video-ctrl" target=token) Play

